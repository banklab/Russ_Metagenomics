


for i in *RAS_metabat

do

cd $i
cd scaffolds_filtered.fasta.metabat-bins*

res=$(echo | ls | wc -l)

if test $res -le 0
then echo $i 'no bins'
fi

cd /storage/scratch/users/rj23k073/01_RAS/08_Binning/01_MetaBAT2

done



