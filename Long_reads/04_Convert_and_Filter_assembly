
conda activate gfa_env

for gfa in *.asm.p_ctg.gfa; do
    
    base=${gfa%.gfa}
    
    out="${base}.fa"

    echo "Converting $gfa -- $out"
    gfatools gfa2fa "$gfa" > "$out"
done


