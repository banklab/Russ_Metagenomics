
## go into each directory of sequences - make query file of paths to each fasta for fastANI input


cd /storage/scratch/users/rj23k073/04_DEER/AllTheBacteria


for i in atb.assembly*
do
cd $i
echo $i
ls *.fa | xargs realpath > /storage/scratch/users/rj23k073/04_DEER/AllTheBacteria/01_FastANI/"$i"_query.txt
cd /storage/scratch/users/rj23k073/04_DEER/AllTheBacteria
done
